{
  "name": "@initbit/nestjs-jetstream",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nats-jetstream/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk"
      }
    }
  },
  "tags": [],
  "targets": {
    "compile": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nats-jetstream",
        "tsConfig": "packages/nats-jetstream/tsconfig.lib.json",
        "packageJson": "packages/nats-jetstream/package.json",
        "main": "packages/nats-jetstream/src/index.ts",
        "assets": [
          "packages/nats-jetstream/*.md"
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run @initbit/nestjs-jetstream:compile && node tools/scripts/copy-js-to-lib.cjs"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/nats-jetstream"
      }
    }
  }
}
